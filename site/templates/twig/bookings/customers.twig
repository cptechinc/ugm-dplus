<table class="table table-sm">
	<thead>
		<tr>
			<th>Date</th>
			<th>Amount</th>
		</tr>
	</thead>
	<tbody>
		{% for customerbooking in customerbookings %}
		<tr>
			<td>
				<a href="{{ page.get_bookings_customerURL(customerbooking.custid) }}" class="link">
					{{ customerbooking.customer.name ? customerbooking.customer.name : customerbooking.custid }}
				</a>
			</td>
			<td>$ {{ customerbooking.amount|currency }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
